{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types/"]
  },
  "include": ["src", "express.d.ts"],
  "exclude": ["node_modules"]
}
